<div class="hero {% if hero.theme %}hero--theme-{{hero.theme}}{% endif %}">
    <div class="hero__container container" data-animate-sequence>
        <div class="hero__wrap">
            {% if hero.img %}
                <div class="hero__image" data-animate-sequence-el>
                    {% if hero.img.tab or hero.img.mob %}
                        {% view '@image-adaptive' with {
                            image: hero.img
                        } %}
                    {% else %}
                        {% view '@image' with {
                            image: hero.img
                        } %}
                    {% endif %}
                </div>
            {% endif %}
            {% if hero.title_hidden %}
                <h1 class="visually-hidden">{{ hero.title_hidden }}</h1>
            {% endif %}
            {% if hero.title %}
                <div class="hero__title" data-animate-sequence-el data-animate-sequence-delay="1">
                    {{hero.title}}
                </div>
            {% endif %}
        </div>
    </div>
    {% if hero.background %}
        <div class="hero__background">
            {% view '@image-adaptive' with {
                image: hero.background
            } %}
        </div>
    {% endif %}
</div>