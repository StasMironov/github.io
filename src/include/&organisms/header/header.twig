<header class="header"  data-header>
	<div class="header__container container">
		<div class="header__content" data-animate-sequence>
			{% if header.action %}
				<div class="header__action" data-animate-sequence-el>
					{% view '@button' with {
						button: header.action
					} %}
				</div>
			{% endif %}
			<nav class="header__navigation">
				<ul class="header__items">
					{% for item in header.navigation %}
						<li class="header__item" data-animate-sequence-el data-animate-sequence-delay="1">
							{% if item.href %}
								<a href="{{ item.href }}"
								   class="header__link {% if item.active %}header__link--active{% endif %}"{% if item.external %} target="_blank"{% endif %}>
								   {{ item.text }}
								</a>
							{% else %}
								<span class="header__link  header__link--active">{{ item.text }}</span>
							{% endif %}
						</li>
					{% endfor %}
				</ul>
			</nav>
			{% if header.action2 %}
				<div class="header__adviser" data-animate-sequence-el data-animate-sequence-delay="2">
					{% view '@button' with {
						button: header.action2
					} %}
				</div>
			{% endif %}
			<button type="button" data-menu-burger class="header__toggle">
				<span></span>
				<span></span>
				<span></span>
			</button>
		</div>
	</div>
</header>
